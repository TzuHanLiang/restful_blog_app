<% include ./partials/header %>

<div class="container ui main text">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <img src="<%= blog.image %>" alt="Blog Image">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                    <div class="meta">
                        <!--.toDateString() which is a nice way of transforming a date
                        into a better format, but the library called momentjs will be a better option-->
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0, 100) %>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                            Read more
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>


</div>

<% include ./partials/footer %>