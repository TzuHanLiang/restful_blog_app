<% include partials/header %>

<!-- copy & paste new.ejs and show the value of specific blog -->

<div class="container ui main text segment">
    <h1 class="ui huge header">Edit <%= blog.title %></h1>
    <!-- HTML don't support put request, if html saw you try to use put -->
    <!-- request, it will automatically change it into get request. = =  -->
    <!-- so we will use: method-override package -->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title: </label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="field">
        <label>Image: </label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
      </div>
      <div class="field">
        <label>Blog Content: </label>
        <!-- textarea doesm't have value attribute -->
        <textarea name="blog[body]" required><%= blog.body %></textarea>
      </div>
      <button class="ui violet basic button " type="submit">UPDATE</button>
    </form>
</div>
<a href="/blogs/<%= blog._id %>" class="ui">&larr; Go Back!</a>

<% include partials/footer %>